{
  "media": {
    "input_path": "M:/OBSVideos/example.mp4",
    "ffmpeg": {
      "sample_rate": 16000,
      "channels": 1
    }
  },
  "whisper": {
    "model": "small",
    "model_disabled": "large-v3",
    "device": "auto",
    "compute_type": "float16",
    "batch_size": 8,
    "beam_size": 5,
    "vad_filter": true,
    "language": "pt",
    "condition_on_previous_text": false,
    "word_timestamps": true
  },
  "output": {
    "base_dir": ".cache",
    "audio_subdir": "audio",
    "transcripts_subdir": "transcripts",
    "save_intermediate_wav": true,
    "json_indent": 2,
    "hash_length": 16
  },
  "diarization": {
    "window_size": 1.0,
    "hop": 0.5,
    "min_window_dur": 0.25,
    "merge_gap": 0.5,
    "num_speakers": null,
    "max_k": 10,
    "out_dir": ".cache/diarization",
    "hash_length": 16
  },
  "meta": {
    "default_diarization_script": "extract_diarization.py",
    "notes": "num_speakers=null => estimativa automÃ¡tica (silhouette/inertia). max_k limitado a 10."
  }
}